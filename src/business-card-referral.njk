layout: "base.njk"
---

<section class="block container">
  <header class="block__header">
    <h2>Free Custom Website Design</h2>
    <p>I just need a few details to get started!</p>
  </header>
  <article class="grid grid--1x2 feature">
    <div class="feature__content">
      <h3 class="feature__heading">Thank You for Scanning the QR Code!</h3>
      <p>
        To claim your free (no strings attached) website design, simply fill out
        the form with some basic details - your name, business niche, and what
        you're looking for in a website! I'll create a free site tailored to
        your needs with no development fee.
      </p>
      <p>
        If you like what you see, you can get 20% off the full version as a
        thank-you for scanning the QR code and giving me a chance :)
      </p>
      <a href="#more">
        <button class="btn btn--secondary">Learn More</button>
      </a>
    </div>
    <div id="#claim" class="card--containter" data-aos="fade-up">
      <div class="contact">
        <div class="card">
          <div class="card__body">
            <form
              name="Demo Website Request"
              method="POST"
              netlify
              enctype="multipart/form-data"
              action="/successful-submission/"
            >
              <div class="form">
                <input
                  type="text"
                  name="Name"
                  placeholder="Name*"
                  class="input"
                  required
                />
                <input
                  type="email"
                  name="Email"
                  placeholder="Email*"
                  class="input"
                  required
                />
                <input
                  type="text"
                  name="Business Name"
                  placeholder="Business Name*"
                  class="input"
                  required
                />
                <textarea
                  rows="5"
                  name="Message"
                  placeholder="Quick Business Overview..."
                  class="message"
                  required
                ></textarea>

                <button
                  id="Contact Button"
                  class="btn btn--outline btn--block"
                  type="submit"
                >
                  Claim Website
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </article>
</section>

<section class="block container">
  <header class="block__header">
    <h2>Previous Clients</h2>
    <p>Check out some of the previous websites I have built for clients!</p>
  </header>
  <article class="feature">
    <div class="feature__content">
      <div class="review-carousel">
        {% for client in portfolio %}

        <div class="portfolio-item">
          <a href="{{ client.url }}" target="_blank">
            <img
              src="{{ client.image }}"
              alt="Site 1"
              class="portfolio__image"
            />
          </a>
          <a
            href="{{ client.url }}"
            target="_blank"
            class="link underline effect"
            >{{ client.name }}</a
          >
        </div>
        {% endfor %}
      </div>
    </div>
  </article>
</section>

